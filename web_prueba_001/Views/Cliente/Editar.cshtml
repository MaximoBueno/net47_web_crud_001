@using web_prueba_001.Models
@model Cliente

@{
    ViewBag.Title = "Editar Cliente";
}

<div class="container">

    <h2>Editar Cliente</h2>

    <form id="form_id_nuevo_cliente" name="form_id_nuevo_cliente" method="post">

        <div class="form-group">
            <input type="hidden" class="form-control" id="id" name="id" placeholder="id" value="@Model.id" required>
        </div>


        <div class="form-group">
            <label for="nombres">Nombres</label>
            <input type="text" class="form-control" id="nombres" name="nombres" placeholder="Nombres" value="@Model.nombres"  required>
        </div>

        <div class="form-group">
            <label for="ap_paterno">Ap Paterno</label>
            <input type="text" class="form-control" id="ap_paterno" name="ap_paterno" placeholder="Paterno" value="@Model.ap_paterno" required>
        </div>

        <div class="form-group">
            <label for="ap_materno">Ap Materno</label>
            <input type="text" class="form-control" id="ap_materno" name="ap_materno" placeholder="Materno" value="@Model.ap_materno" required>
        </div>

        <div class="form-group">
            <label for="nro_documento">Nro Documento</label>
            <input type="text" class="form-control" id="nro_documento" name="nro_documento" placeholder="Documento" value="@Model.nro_documento" required>
        </div>

        <div class="form-group">
            <label for="correo">Correo</label>
            <input type="email" class="form-control" id="correo" name="correo" placeholder="Correo" value="@Model.correo" required>
        </div>

        <div class="form-group">
            <label for="nro_contacto">Nro Contacto</label>
            <input type="text" class="form-control" id="nro_contacto" name="nro_contacto" placeholder="Contacto" value="@Model.nro_contacto" required>
        </div>

        <button type="submit" class="btn btn-sm btn-primary">Editar</button>
    </form>

</div>

@section scripts {
    <script src="@Url.Content("~/Scripts/ajax/clienteForm.js")" type="text/javascript"></script>
}